%h2 The designer
.row
  .five.columns.centered
    .designer-wrapper
      .image-wrapper.round-large
        =image_tag @designer.image_url
      .ribbon-wrapper
        .ribbon-front
          %h3=@designer.name
        .ribbon-edge-topleft
        .ribbon-edge-topright
        .ribbon-edge-bottomleft
        .ribbon-edge-bottomright
        .ribbon-back-left
        .ribbon-back-right
    .six.columns.centered
      %a.icon-facebook-sign.icon-4x{href: @designer.facebook_url}
      %a.icon-twitter-sign.icon-4x{href: @designer.twitter_url}
      %a.icon-google-plus-sign.icon-4x{href: @designer.google_url}
.row
  .twelve.columns
    %h2 Who IS?
    .panel
      %i.icon-quote-left.icon-4x.pull-left
      = @designer.description
   

